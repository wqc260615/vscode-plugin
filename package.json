{
  "name": "vscode-ai-assistant",
  "displayName": "AI Assistant",
  "description": "A local LLM-powered AI assistant with Ollama integration",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Snippets"
  ],
  "keywords": [
    "ai",
    "assistant",
    "ollama",
    "llm",
    "chat"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aiAssistant.newSession",
        "title": "New Session",
        "icon": "$(add)",
        "category": "AI Assistant"
      },
      {
        "command": "aiAssistant.selectSession",
        "title": "Select Session",
        "category": "AI Assistant"
      },
      {
        "command": "aiAssistant.renameSession",
        "title": "Rename Session",
        "category": "AI Assistant"
      },
      {
        "command": "aiAssistant.deleteSession",
        "title": "Delete Session",
        "category": "AI Assistant"
      },
      {
        "command": "aiAssistant.clearSession",
        "title": "Clear Session",
        "category": "AI Assistant"
      },
      {
        "command": "aiAssistant.addReferenceFile",
        "title": "Add Reference File",
        "icon": "$(file-add)",
        "category": "AI Assistant"
      },
      {
        "command": "aiAssistant.removeReferenceFile",
        "title": "Remove Reference File",
        "category": "AI Assistant"
      },
      {
        "command": "aiAssistant.refreshProjectContext",
        "title": "Refresh Project Context",
        "icon": "$(refresh)",
        "category": "AI Assistant"
      },
      {
        "command": "aiAssistant.clearReferenceFiles",
        "title": "Clear All Reference Files",
        "icon": "$(clear-all)",
        "category": "AI Assistant"
      },
      {
        "command": "aiAssistant.sendToAssistant",
        "title": "Send to AI Assistant",
        "category": "AI Assistant"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "aiAssistant.newSession",
          "when": "view == aiAssistant.sessionsView",
          "group": "navigation"
        },
        {
          "command": "aiAssistant.addReferenceFile",
          "when": "view == aiAssistant.contextView",
          "group": "navigation@1"
        },
        {
          "command": "aiAssistant.refreshProjectContext",
          "when": "view == aiAssistant.contextView",
          "group": "navigation@2"
        },
        {
          "command": "aiAssistant.clearReferenceFiles",
          "when": "view == aiAssistant.contextView",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "aiAssistant.selectSession",
          "when": "view == aiAssistant.sessionsView && viewItem == session",
          "group": "inline@1"
        },
        {
          "command": "aiAssistant.renameSession",
          "when": "view == aiAssistant.sessionsView && viewItem == session",
          "group": "session@1"
        },
        {
          "command": "aiAssistant.clearSession",
          "when": "view == aiAssistant.sessionsView && viewItem == session",
          "group": "session@2"
        },
        {
          "command": "aiAssistant.deleteSession",
          "when": "view == aiAssistant.sessionsView && viewItem == session",
          "group": "session@3"
        },
        {
          "command": "aiAssistant.removeReferenceFile",
          "when": "view == aiAssistant.contextView && viewItem == reference-file",
          "group": "context@1"
        }
      ],
      "editor/context": [
        {
          "command": "aiAssistant.sendToAssistant",
          "when": "editorHasSelection",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "aiAssistant.newSession"
        },
        {
          "command": "aiAssistant.addReferenceFile"
        },
        {
          "command": "aiAssistant.refreshProjectContext"
        },
        {
          "command": "aiAssistant.sendToAssistant",
          "when": "editorHasSelection"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aiAssistant",
          "title": "AI Assistant",
          "icon": "$(robot)"
        }
      ]
    },
    "views": {
      "aiAssistant": [
        {
          "id": "aiAssistant.chatView",
          "name": "Chat",
          "type": "webview"
        },
        {
          "id": "aiAssistant.sessionsView",
          "name": "Sessions",
          "type": "tree"
        },
        {
          "id": "aiAssistant.contextView",
          "name": "Context Files",
          "type": "tree"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "AI Assistant Configuration",
      "properties": {
        "aiAssistant.ollamaUrl": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "Ollama server URL"
        },
        "aiAssistant.defaultModel": {
          "type": "string",
          "default": "llama2",
          "description": "Default model to use"
        },
        "aiAssistant.enableDataCollection": {
          "type": "boolean",
          "default": false,
          "description": "Enable anonymous usage data collection"
        },
        "aiAssistant.maxContextFiles": {
          "type": "number",
          "default": 50,
          "description": "Maximum number of context files to include"
        }
      }
    },
    "keybindings": [
      {
        "command": "vscode-plugin.sendToAssistant",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a",
        "when": "editorHasSelection"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  }
}
