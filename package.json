{
  "name": "vscode-ai-assistant",
  "displayName": "AI Assistant",
  "description": "A local LLM-powered AI assistant",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Snippets",
    "Programming Languages"
  ],
  "keywords": [
    "ai",
    "assistant",
    "ollama",
    "llm",
    "chat",
    "completion",
    "autocomplete",
    "copilot"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aiAssistant.addReferenceFile",
        "title": "Add Reference File",
        "icon": "$(file-add)",
        "category": "AI Assistant"
      },
      {
        "command": "aiAssistant.removeReferenceFile",
        "title": "Remove Reference File",
        "category": "AI Assistant",
        "icon": "$(file-remove)"
      },
      {
        "command": "aiAssistant.refreshProjectContext",
        "title": "Refresh Project Context",
        "icon": "$(refresh)",
        "category": "AI Assistant"
      },
      {
        "command": "aiAssistant.clearReferenceFiles",
        "title": "Clear All Reference Files",
        "icon": "$(clear-all)",
        "category": "AI Assistant"
      },
      {
        "command": "aiAssistant.sendToAssistant",
        "title": "Send to AI Assistant",
        "category": "AI Assistant",
        "icon": "$(send)"
      },
      {
        "command": "aiAssistant.acceptCompletion",
        "title": "Accept AI Completion",
        "category": "AI Assistant",
        "icon": "$(check)"
      },
      {
        "command": "aiAssistant.rejectCompletion",
        "title": "Reject AI Completion",
        "category": "AI Assistant",
        "icon": "$(close)"
      },
      {
        "command": "aiAssistant.triggerCompletion",
        "title": "Trigger AI Completion",
        "category": "AI Assistant",
        "icon": "$(lightbulb)"
      },
      {
        "command": "aiAssistant.toggleCompletion",
        "title": "Toggle AI Code Completion",
        "category": "AI Assistant",
        "icon": "$(lightbulb)"
      },
      {
        "command": "aiAssistant.showInlineChat",
        "title": "Show Inline Chat",
        "category": "AI Assistant",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "aiAssistant.switchLLMProvider",
        "title": "Switch LLM Provider",
        "category": "AI Assistant",
        "icon": "$(server)"
      },
      {
        "command": "aiAssistant.showLLMConfig",
        "title": "Show LLM Configuration",
        "category": "AI Assistant",
        "icon": "$(gear)"
      },
      {
        "command": "aiAssistant.testLLMConnection",
        "title": "Test LLM Connection",
        "category": "AI Assistant",
        "icon": "$(check)"
      },
      {
        "command": "aiAssistant.refreshLLMService",
        "title": "Refresh LLM Service",
        "category": "AI Assistant",
        "icon": "$(refresh)"
      },
      {
        "command": "extension.inlineChat.enter",
        "title": "Inline Chat: Accept Input",
        "category": "AI Assistant",
        "icon": "$(check)"
      },
      {
        "command": "extension.inlineChat.escape",
        "title": "Inline Chat: Cancel Input",
        "category": "AI Assistant",
        "icon": "$(close)"
      },
      {
        "command": "aiAssistant.checkConnection",
        "title": "Check Ollama Connection",
        "category": "AI Assistant",
        "icon": "$(plug)"
      },
      {
        "command": "aiAssistant.extensible.quickCodeReview",
        "title": "Quick Code Review",
        "category": "AI Assistant",
        "icon": "$(search)"
      },
      {
        "command": "aiAssistant.contextMenu.explainCode",
        "title": "Explain Code",
        "category": "AI Assistant",
        "icon": "$(lightbulb)"
      },
      {
        "command": "aiAssistant.contextMenu.optimizeCode",
        "title": "Optimize Code",
        "category": "AI Assistant",
        "icon": "$(zap)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "aiAssistant.addReferenceFile",
          "when": "view == aiAssistant.contextView",
          "group": "navigation@1"
        },
        {
          "command": "aiAssistant.refreshProjectContext",
          "when": "view == aiAssistant.contextView",
          "group": "navigation@2"
        },
        {
          "command": "aiAssistant.clearReferenceFiles",
          "when": "view == aiAssistant.contextView",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "aiAssistant.removeReferenceFile",
          "when": "view == aiAssistant.contextView && viewItem == reference-file",
          "group": "context@1"
        }
      ],
      "editor/context": [
        {
          "command": "aiAssistant.sendToAssistant",
          "when": "editorHasSelection",
          "group": "navigation"
        },
        {
          "command": "aiAssistant.triggerCompletion",
          "when": "editorTextFocus",
          "group": "navigation"
        },
        {
          "command": "aiAssistant.contextMenu.explainCode",
          "when": "editorHasSelection",
          "group": "ai@1"
        },
        {
          "command": "aiAssistant.contextMenu.optimizeCode",
          "when": "resourceExtname == .js || resourceExtname == .ts || resourceExtname == .py",
          "group": "ai@2"
        }
      ],
      "commandPalette": [
        {
          "command": "aiAssistant.addReferenceFile"
        },
        {
          "command": "aiAssistant.refreshProjectContext"
        },
        {
          "command": "aiAssistant.sendToAssistant",
          "when": "editorHasSelection"
        },
        {
          "command": "aiAssistant.acceptCompletion"
        },
        {
          "command": "aiAssistant.rejectCompletion"
        },
        {
          "command": "aiAssistant.triggerCompletion"
        },
        {
          "command": "aiAssistant.toggleCompletion"
        },
        {
          "command": "aiAssistant.showInlineChat"
        },
        {
          "command": "aiAssistant.extensible.quickCodeReview"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aiAssistant",
          "title": "AI Assistant",
          "icon": "$(robot)"
        }
      ]
    },
    "views": {
      "aiAssistant": [
        {
          "id": "aiAssistant.chatView",
          "name": "Chat",
          "type": "webview"
        },
        {
          "id": "aiAssistant.contextView",
          "name": "Context Files",
          "type": "tree"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "AI Assistant Configuration",
      "properties": {
        "aiAssistant.llmProvider": {
          "type": "string",
          "enum": ["ollama", "localai"],
          "default": "ollama",
          "description": "LLM service provider to use"
        },
        "aiAssistant.ollamaUrl": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "Ollama server URL"
        },
        "aiAssistant.localaiUrl": {
          "type": "string",
          "default": "http://localhost:8080",
          "description": "LocalAI server URL"
        },
        "aiAssistant.ollamaTimeout": {
          "type": "number",
          "default": 30000,
          "minimum": 1000,
          "maximum": 300000,
          "description": "Ollama request timeout in milliseconds"
        },
        "aiAssistant.localaiTimeout": {
          "type": "number",
          "default": 30000,
          "minimum": 1000,
          "maximum": 300000,
          "description": "LocalAI request timeout in milliseconds"
        },
        "aiAssistant.ollamaMaxRetries": {
          "type": "number",
          "default": 3,
          "minimum": 0,
          "maximum": 10,
          "description": "Maximum number of retry attempts for Ollama"
        },
        "aiAssistant.localaiMaxRetries": {
          "type": "number",
          "default": 3,
          "minimum": 0,
          "maximum": 10,
          "description": "Maximum number of retry attempts for LocalAI"
        },
        "aiAssistant.defaultModel": {
          "type": "string",
          "default": "",
          "description": "Default LLM model to use (leave empty to auto-select first available model)"
        },
        "aiAssistant.enableDataCollection": {
          "type": "boolean",
          "default": false,
          "description": "Enable anonymous usage data collection"
        },
        "aiAssistant.maxContextFiles": {
          "type": "number",
          "default": 50,
          "description": "Maximum number of context files to include"
        },
        "aiAssistant.maxPromptLength": {
          "type": "number",
          "default": 50000,
          "description": "Maximum length of the generated prompt in characters (50KB default)"
        },
        "aiAssistant.maxFileContentLength": {
          "type": "number",
          "default": 3000,
          "description": "Maximum content length per file in characters (3KB default)"
        },
        "aiAssistant.enableCodeCompletion": {
          "type": "boolean",
          "default": true,
          "description": "Enable AI-powered code completion"
        },
        "aiAssistant.errorHandling": {
          "type": "object",
          "default": {
            "showDetailedErrors": true,
            "enableRetry": true,
            "maxRetries": 3,
            "cacheResponses": true,
            "showConnectionWarnings": true
          },
          "properties": {
            "showDetailedErrors": {
              "type": "boolean",
              "default": true,
              "description": "Show detailed error messages with suggested solutions"
            },
            "enableRetry": {
              "type": "boolean",
              "default": true,
              "description": "Enable automatic retry for failed requests"
            },
            "maxRetries": {
              "type": "number",
              "default": 3,
              "minimum": 1,
              "maximum": 10,
              "description": "Maximum number of retry attempts"
            },
            "cacheResponses": {
              "type": "boolean",
              "default": true,
              "description": "Cache responses for fallback when service is unavailable"
            },
            "showConnectionWarnings": {
              "type": "boolean",
              "default": true,
              "description": "Show warnings when Ollama service is not available"
            }
          },
          "description": "Error handling and retry configuration"
        },
        "aiAssistant.completionDelay": {
          "type": "number",
          "default": 500,
          "description": "Delay in milliseconds before triggering completion"
        },
        "aiAssistant.completionMaxLength": {
          "type": "number",
          "default": 200,
          "description": "Maximum length of completion suggestions"
        },
        "aiAssistant.completionContextLength": {
          "type": "number",
          "default": 500,
          "description": "Number of characters to include as context for completion"
        }
      }
    },
    "keybindings": [
      {
        "command": "aiAssistant.sendToAssistant",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a",
        "when": "editorHasSelection"
      },
      {
        "command": "aiAssistant.triggerCompletion",
        "key": "ctrl+space",
        "mac": "cmd+space",
        "when": "editorTextFocus"
      },
      {
        "command": "aiAssistant.toggleCompletion",
        "key": "ctrl+alt+c",
        "mac": "cmd+alt+c"
      },
      {
        "command": "aiAssistant.showInlineChat",
        "key": "ctrl+i",
        "mac": "cmd+i",
        "when": "editorTextFocus"
      },
      {
        "command": "extension.inlineChat.enter",
        "key": "enter",
        "when": "inlineChatActive && editorTextFocus"
      },
      {
        "command": "extension.inlineChat.escape",
        "key": "escape",
        "when": "inlineChatActive && editorTextFocus"
      },
      {
        "command": "aiAssistant.extensible.quickCodeReview",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.28.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.40.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@babel/parser": "^7.28.3",
    "@babel/traverse": "^7.28.3",
    "@babel/types": "^7.28.2",
    "java-parser": "^3.0.1",
    "node-fetch": "^3.3.2"
  }
}
